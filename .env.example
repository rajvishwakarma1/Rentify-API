# Server
PORT=3000
# development | test | production
NODE_ENV=development

# MongoDB
# Base URI to your MongoDB instance (without DB name)
MONGODB_URI=mongodb://localhost:27017
# Database name used by the app
DB_NAME=rentify

# Auth / Security (future use)
# Use a strong, unique secret in production
JWT_SECRET=replace-with-a-strong-secret

# Logging
# error | warn | info | debug
LOG_LEVEL=debug

# Cache / Redis
# Redis connection string (use redis://localhost:6379 for local)
REDIS_URL=redis://localhost:6379
# TTLs in seconds
CACHE_TTL_DEFAULT=300
CACHE_TTL_SEARCH=60
CACHE_TTL_FILTERS=1800

# Performance Monitoring
SLOW_QUERY_THRESHOLD_MS=1000
ENABLE_QUERY_MONITORING=true

# Geo scope
# Restrict results to a specific country (e.g., India)
DEFAULT_COUNTRY=India
