# Server Configuration
PORT=3000                # Default development port
NODE_ENV=development     # Environment mode (development, production)

# Database Configuration
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster/   # MongoDB Atlas connection string
DB_NAME=rentify         # Database name for the rental platform

# Authentication
JWT_SECRET=your_jwt_secret   # Secret for JWT token signing
JWT_EXPIRES_IN=7d           # Token expiration time (e.g., 7d, 24h)

# Application Settings
DEFAULT_COUNTRY=India       # Default country for the rental platform
API_VERSION=v1              # API versioning

# Deployment Settings
CORS_ORIGIN=http://localhost:3000   # Allowed origins for CORS (comma-separated for multiple)
LOG_LEVEL=info                     # Logging level for production

#
# Notes:
# - Replace <user> and <pass> in MONGODB_URI with your MongoDB Atlas credentials.
# - For deployment on Render, set environment variables in the Render dashboard.
# - In production, CORS_ORIGIN must be set or all cross-origin requests will be denied.
